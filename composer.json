{
    "name": "task-queue/enterprise-job-system",
    "description": "Enterprise-grade job queue and processing system",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Task Queue Developer",
            "email": "dev@taskqueue.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/console": "^6.3",
        "symfony/process": "^6.3",
        "monolog/monolog": "^3.0",
        "predis/predis": "^2.0",
        "ext-pcntl": "*",
        "ext-posix": "*",
        "ext-pdo": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "TaskQueue\\": "src/",
            "TaskQueue\\Public\\": "public/",
            "TaskQueue\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TaskQueue\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
